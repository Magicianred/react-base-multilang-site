{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown",
        "better-docs/component"
    ],
     "templates": {
      "better-docs": {
          "name": "My React components"
        },
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "encoding": "utf8",
        "destination": "public/docs",
        "recurse": true,
        "verbose": true,
        "readme": "README.md",
        "template": "node_modules/docdash"
    }
}